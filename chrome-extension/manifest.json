{
    "name": "sales-assistant",
    "version": "0.0.1",
    "description": "Your dumb assistant in sales.",
    "manifest_version": 3,
    "author": "Alin Climente",
    "action": {
        "default_popup": "index.html",
        "default_title": "Sales Assistant"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "van-1.5.0.nomodule.min.js",
                "content-script.js"
            ]
        }
    ]
}